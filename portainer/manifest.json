{
	"manifest_version": 3,
	"name": "Portainer Containers Global Search",
	"version": "1.0.0",
	"description": "Recherche dynamique de conteneurs sur une instance Portainer.",
	"permissions": [
	  "storage"
	],
	"host_permissions": ["https://*/"],
	"background": {
	    "service_worker": "background.js"
	},
	"icons": {
	  "48": "icons/portainer-48.png"
	},
	"action": {
	  "default_icon": {
	    "48": "icons/portainer-48.png"
	  },
	  "default_title": "Recherche Portainer",
	  "default_popup": "popup.html"
	},
	"options_page": "options.html"
}